---
import prismicDom from 'prismic-dom'
import WorkCard from '../cards/WorkCard.astro'
import Triangle from '../shapes/Triangle.astro'

const { slice } = Astro.props
---

<section>
  <h1>My work</h1>
  <div>
    {slice?.map(({ projects: { data }, id }) => (
      <WorkCard 
        id={id} 
        title={prismicDom.RichText.asText(data.name)} 
        variant={data.type}
        cta={{
          label: prismicDom.RichText.asText(data.cta_label),
        }}
        image={{
          src: data.image?.url,
          alt: data.image?.alt,
        }}
      />
    ))}
    <Triangle class="triangle" stroke={30} />
  </div>
</section>

<style lang="scss">
  section {
    --section-margin-bottom: clamp(6.4rem, 3.7000rem + 7.5000vw, 10rem)
    margin-bottom: var(--section-margin-bottom);

    width: calc(100% + (var(--body-padding) * 2));
    margin-left: calc(var(--body-padding) * -1);

    padding-inline: clamp(2.1rem, 0.1986rem + 9.5070vw, 7.5rem);

    @media screen and (min-width: 768px) {
      padding-inline: clamp(7.5rem, -22.6333rem + 39.2361vw, 52.7rem);
    }
    

    h1 {
      --heading-margin-bottom: clamp(4.8rem, -0.9000rem + 15.8333vw, 12.4rem);
      text-decoration: underline;
      text-align: center;

      margin-bottom: var(--heading-margin-bottom);
    }

    div {
      display: grid;
      grid-template-columns: 1fr;
      gap: 6.4rem;

      position: relative;

      max-width: 88.6rem;
      margin-inline: auto;

      .triangle {
        --size: clamp(80rem, 57.1250rem + 63.5417vw, 110.5rem);
        position: absolute;

        display: none;

        top: 100%;
        left: 0;

        transform: translate(-50%, -50%) rotate(-150deg);

        width: var(--size);
        height: var(--size);

        opacity: 0.07;
        z-index: -1;

        @media screen and (min-width: 768px) {
          display: block;
        }
      }

      @media screen and (min-width: 768px) {
        gap: 7.2rem 2.4rem;
        grid-template-columns: 1fr 1fr;
      }
    }
  }
</style>