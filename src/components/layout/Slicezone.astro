---
import ContactForm from "../cards/ContactForm.svelte";
import Subhero from "./Subhero.astro";
import Testimonials from "./Testimonials.astro";
import Work from "./Work.astro";

const { slices } = Astro.props;

const recaptchaKey = process.env.RECAPTCHA_HTML;
---

{slices.map((slice) => {
  switch (slice.slice_type) {
    case "call_to_action":
      return <Subhero slice={slice.primary} />;
    case "testimonials":
      return <Testimonials slice={slice.items} />;
    case "work_section":
      return <Work slice={slice.items} />;
    case "contact_form":
      return <ContactForm client:visible recaptchaKey={recaptchaKey} slice={{ fields: slice.items, data: slice.primary }} />;
    default:
      return null;
  }
})}

<style>
  .debug {
    font-size: 1.5rem;
  }
</style>
